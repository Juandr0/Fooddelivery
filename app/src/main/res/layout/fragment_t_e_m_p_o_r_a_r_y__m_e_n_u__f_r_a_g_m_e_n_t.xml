<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.user.TEMPORARY_MENU_FRAGMENT">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/order_restaurantNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="104dp"
            android:text="BrÃ¶dernas Liljeholmen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="89.90"
            app:layout_constraintBaseline_toBaselineOf="@+id/order_pris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toEndOf="@+id/order_pris" />

        <TextView
            android:id="@+id/order_menyItemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:text="Tripple cheese med pommes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order_restaurantNameTextView" />

        <TextView
            android:id="@+id/order_pris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp"
            android:text="pris:"
            app:layout_constraintBottom_toTopOf="@+id/order_menyItemTextView"
            app:layout_constraintStart_toEndOf="@+id/order_menyItemTextView" />

        <Button
            android:id="@+id/order_addToOrderButton"
            android:layout_width="93dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:text="Add to order"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/order_priceTextView"
            app:layout_constraintTop_toTopOf="@+id/order_pris" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>